<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ title || "Checked" }}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/png" href="/check.png" />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.8.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/tailwind.css" />
  </head>
  <body class="min-h-screen bg-slate-50 font-['Nunito_Sans'] text-slate-900">

    <header class="sticky top-0 z-20 border-b border-slate-200 bg-white/95">
      <div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-5">
        <a href="/" class="inline-flex items-center gap-2 text-xl font-semibold tracking-tight font-['Nunito_Sans'] cursor-pointer">
          <img src="/check.svg" alt="Checked" class="h-8 w-8" />
          Checked
        </a>
        <nav class="flex items-center gap-6 text-sm font-semibold">
          <a
            href="/"
            class="inline-flex items-center gap-2 transition hover:text-slate-900 {{ active === 'dashboard' ? 'text-slate-900' : 'text-slate-500' }} cursor-pointer"
          >
            <i class="ri-dashboard-3-line text-base"></i>
            Dashboard
          </a>
          <a
            href="/teams"
            class="inline-flex items-center gap-2 transition hover:text-slate-900 {{ active === 'teams' ? 'text-slate-900' : 'text-slate-500' }} cursor-pointer"
          >
            <i class="ri-team-line text-base"></i>
            Teams
          </a>
          <a
            href="/checkins"
            class="inline-flex items-center gap-2 transition hover:text-slate-900 {{ active === 'checkins' ? 'text-slate-900' : 'text-slate-500' }} cursor-pointer"
          >
            <i class="ri-clipboard-line text-base"></i>
            Checkins
          </a>
        </nav>
      </div>
    </header>

    <main class="mx-auto flex w-full max-w-6xl flex-col gap-10 px-6 py-10">
      @if($slots.main)
        {{{ await $slots.main() }}}
      @endif
    </main>
  </body>
</html>
